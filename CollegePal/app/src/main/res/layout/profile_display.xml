<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight= "16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="iavanish.collegepal.Courses.Start.DisplayProfile">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/profileDisplay_TableLayout">
<TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email ID"
        android:id="@+id/textView_courseID"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_emailID"
        android:layout_weight="1"
        android:layout_marginTop="22dp"
        android:layout_alignTop="@+id/textView_courseID"
        android:layout_centerHorizontal="true" />
</TableRow>
<TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="22dp"
        android:id="@+id/text_name" />
</TableRow>
<TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course"
        android:id="@+id/textView_course"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_course"
        android:layout_weight="1"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true" />
</TableRow>
<TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch"
        android:id="@+id/textView_branch"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_branch"
        android:layout_weight="1"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true" />
</TableRow>
<TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Institution"
        android:id="@+id/textView_institution"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_institution"
        android:layout_weight="1"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true" />
</TableRow>
<TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills"
        android:id="@+id/textView_skill"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="22dp"
        android:id="@+id/text_skills"/>
</TableRow>
<TableLayout>
    <TableRow>
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:id="@+id/button_editprofile"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="10dp"
            android:layout_column="0"
            android:width="150dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:id="@+id/button_proceed"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="10dp"
            android:width="150dp"
            android:layout_weight="1"
            android:layout_column="1"
            android:layout_marginRight="8dp"/>
    </TableRow>
 </TableLayout>
<TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses Enrolled"
        android:id="@+id/textView_courseEnrolled"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_weight="1"
        android:layout_marginTop="22dp"
        android:id="@+id/text_courseEnrolled" />
</TableRow>
<TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses Offering"
        android:id="@+id/textView_courseOffering"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_weight="1"
        android:layout_marginTop="22dp"
        android:id="@+id/text_courseOffering" />
</TableRow>

</TableLayout>
</ScrollView>
</LinearLayout>