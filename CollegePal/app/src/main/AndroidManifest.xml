<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iavanish.collegepal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".Start.SignUp"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Start.CreateProfile"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".Start.DisplayProfile"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Courses.CreateCourse"
            android:label="@string/title_activity_create_course"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".Courses.DisplayCourse"
            android:label="@string/title_activity_display_course"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".Start.StudentDashboard"
            android:label="@string/title_activity_student_dashboard"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".Courses.CourseActivity"
            android:label="@string/title_activity_course"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".Courses.UpdateCourse"
            android:label="@string/title_activity_update_course" >
        </activity>
        <activity
            android:name=".Start.EditProfile"
            android:label="@string/title_activity_edit_profile" >
        </activity>
        <activity
            android:name=".Courses.EnrollCourse"
            android:label="@string/title_activity_enroll_course" >
        </activity>
        <activity
            android:name=".Courses.UpdateOwnCourse"
            android:label="@string/title_activity_update_own_course" >
        </activity>
        <activity
            android:name=".Courses.CourseDashBoard"
            android:label="@string/title_activity_course_dash_board" >
        </activity>

        <!--
        <activity
            android:name=".Calendar.CalendarActivity"
            android:label="@string/title_activity_calendar" >
        </activity>
        -->
        <activity
            android:name=".Courses.CourseDashBoardView"
            android:label="@string/title_activity_course_dash_board_view" >
        </activity>
        <activity
            android:name=".Deadlines.DeadlineActivity"
            android:label="@string/title_activity_deadline" >
        </activity>
        <activity
            android:name=".Deadlines.AddDeadline"
            android:label="@string/title_activity_add_deadline" >
        </activity>
    </application>

</manifest>
